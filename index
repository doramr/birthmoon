<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Moon Phase Calculator</title>
</head>
<body>
    <h1>Moon Phase Calculator</h1>
    <label for="birthdate">Enter your birth date:</label>
    <input type="date" id="birthdate" name="birthdate">
    <button onclick="calculateMoonPhase()">Calculate Moon Phase</button>
    <p id="result"></p>

    <script>
        function calculateMoonPhase() {
            const birthdate = new Date(document.getElementById('birthdate').value);
            const knownNewMoon = new Date('2000-01-06');
            const lunarCycle = 29.53;

            const daysSinceKnownNewMoon = Math.floor((birthdate - knownNewMoon) / (1000 * 60 * 60 * 24));
            const moonAge = daysSinceKnownNewMoon % lunarCycle;

            let phase;
            if (moonAge < 1) {
                phase = 'New Moon';
            } else if (moonAge < 7) {
                phase = 'Waxing Crescent';
            } else if (moonAge < 14) {
                phase = 'First Quarter';
            } else if (moonAge < 21) {
                phase = 'Full Moon';
            } else if (moonAge < 28) {
                phase = 'Last Quarter';
            } else {
                phase = 'Waning Crescent';
            }

            document.getElementById('result').textContent = `The moon phase on ${birthdate.toDateString()} was ${phase}.`;
        }
    </script>
</body>
</html>
